<div class="container">
  <h2 class="m-3 h-2">Login</h2>
  <form class="login-form">

    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="username" placeholder="Username" />
      <label for="username">Username</label>
    </div>

    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="password-login" placeholder="Password" />
      <label for="password-login">Password</label>
    </div>

    <div class="btn-group d-flex" role="group" aria-label="Basic example">
      <button type="submit" class="btn btn-outline-primary btn-lg">Login</button>

      <a id="signupBtn" type="button" href="/signup" class="btn btn-outline-secondary btn-lg" style="color: #292b2c">Signup</a>

    </div>

  </form>
</div>

<script src="./js/login.js"></script>