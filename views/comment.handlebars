<style>
  .roundLeft {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    }
</style>

{{! single blog that was clicked on }}
<div class="card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between"">
          <h5 class="card-title">{{title}}</h5>
          <h6 class="card-subtitle mb-1 text-muted d-flex align-items-center">Posted by: {{user.username}} on {{format_date createdAt}}</h6>
        </div>
        <p class="card-text">{{content}}</p>
      </div>
    </div>

{{!-- comment input --}}
<div class="input-group new-comment-form">
  <div class="input-group-prepend">
    <button type='submit' id="" class="roundLeft input-group-text h-100 btn btn-primary" data-id="{{id}}">Comment</button>
  </div>
  <textarea class="form-control" aria-label="With textarea" id="comment" name="comment" placeholder="comment here"></textarea>
</div>

{{!-- comments --}}
<h3 class="mt-3">comments</h3> 
<div class="list-group">
  {{#each comments}}
  <div class="list-group-item list-group-item-action flex-column align-items-start ">
    <div class="d-flex w-100 justify-content-between">
      <p class="mb-1">{{comment}}</p>
      <small>{{format_date createdAt}}</small>
    </div>
    <small>-{{user.username}}</small>
  </div>
    {{/each}}
</div>

<script src="/js/comment.js"></script>